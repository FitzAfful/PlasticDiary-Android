<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro__display_heavy"
            android:lineHeight="19dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/text_black"
            android:textSize="20sp"
            tools:text="Top News" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_item_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/article_item_layout"
            tools:itemCount="1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_medium"
            android:drawableEnd="@drawable/ic_arrow_right_alt"
            app:drawableTint="@color/heading_text_green"
            android:textColor="@color/heading_text_green"
            tools:text="see more news"
            android:layout_marginStart="10dp" />

    </LinearLayout>
</layout>