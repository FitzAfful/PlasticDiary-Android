<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <View
            android:layout_width="30dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/swipe_up_handle" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/total_streaks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sf_pro__display_heavy"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:drawableStart="@drawable/ic_fire"
            app:drawableTint="@color/heading_text_red"
            android:textColor="@color/alternate_text_color"
            tools:text="5 days" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Current streak"
            android:textColor="@color/text_grey_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/streak_info"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_medium"
            tools:text="5 days in this app this year"
            android:textColor="@color/text_grey_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="This Week"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:fontFamily="@font/sf_pro_regular"
                android:text="Sun"
                android:textColor="@color/alternate_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sun_txt"
                android:fontFamily="@font/sf_pro_regular"
                tools:text="1"
                android:gravity="center"
                android:textColor="@color/alternate_text_color"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:fontFamily="@font/sf_pro_regular"
                android:text="Mon"
                android:textColor="@color/alternate_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mon_txt"
                android:fontFamily="@font/sf_pro_regular"
                tools:text="2"
                android:textColor="@color/alternate_text_color"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:fontFamily="@font/sf_pro_regular"
                android:text="Tue"
                android:textColor="@color/alternate_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tue_txt"
                android:fontFamily="@font/sf_pro_regular"
                tools:text="3"
                android:textColor="@color/alternate_text_color"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:fontFamily="@font/sf_pro_regular"
                android:text="Wed"
                android:textColor="@color/alternate_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/wed_txt"
                android:fontFamily="@font/sf_pro_regular"
                tools:text="4"
                android:textColor="@color/alternate_text_color"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:fontFamily="@font/sf_pro_regular"
                android:text="Thu"
                android:textColor="@color/alternate_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/thu_txt"
                android:fontFamily="@font/sf_pro_regular"
                tools:text="5"
                android:textColor="@color/alternate_text_color"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:fontFamily="@font/sf_pro_regular"
                android:text="Fri"
                android:textColor="@color/alternate_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fri_txt"
                android:fontFamily="@font/sf_pro_regular"
                tools:text="6"
                android:textColor="@color/alternate_text_color"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:fontFamily="@font/sf_pro_regular"
                android:text="Sat"
                android:textColor="@color/alternate_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sat_txt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:fontFamily="@font/sf_pro_regular"
                android:gravity="center"
                android:textColor="@color/alternate_text_color"
                tools:text="7" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</layout>