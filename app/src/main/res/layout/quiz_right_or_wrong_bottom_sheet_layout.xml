<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey_30"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/correct_answer_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/heading_text_green"
                android:fontFamily="@font/sf_pro_display_bold"
                android:textSize="20sp"
                android:text="Great Job!" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continue_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Continue"
                android:textColor="@color/white"
                app:backgroundTint="@color/heading_text_green"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/correct_answer_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:fontFamily="@font/sf_pro_regular"
                android:textSize="16sp"
                tools:text="@string/wrong_answer_tip" />
            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="10dp"
                android:id="@+id/wrong_continue_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Continue"
                android:textColor="@color/white"
                app:backgroundTint="@color/logout_btn_color"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </RelativeLayout>
</layout>